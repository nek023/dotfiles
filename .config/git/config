[alias]
  pop  = stash pop
  drop = stash drop
  open = !gh repo view -w -b $(git symbolic-ref --short HEAD)
[branch]
  sort = -committerdate
[core]
  editor = nvim
  pager = sh -c 'command -v delta >/dev/null 2>&1 && delta --diff-highlight --keep-plus-minus-markers || less'
[delta]
  navigate = true
[diff]
  algorithm = histogram
  colorMoved = default
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[gtr "ai"]
  default = claude
[gtr "editor"]
  default = vscode
[gtr "copy"]
  includedirs = .claude
[include]
  path = ~/.config.local/git/config
[init]
  defaultBranch = main
[interactive]
  diffFilter = sh -c 'command -v delta >/dev/null 2>&1 && delta --diff-highlight --keep-plus-minus-markers || cat'
[merge]
  conflictstyle = zdiff3
[pager]
  difftool = true
[push]
  default = current
[rebase]
  autosquash = true
  autostash = true
