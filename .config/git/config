[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  pop  = stash pop
  drop = stash drop
  unstage = reset HEAD --
[core]
  editor = vim
  excludesfile = ~/.config/git/ignore
[ghq]
  root = ~/.ghq
[include]
  path = ~/.config.local/git/config
[merge]
	ff = false
[pager]
  log  = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[pull]
	ff = only
	rebase = true
[push]
  default = current
