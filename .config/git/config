[alias]
  pop  = stash pop
  drop = stash drop
  open = !gh repo view -w -b $(git symbolic-ref --short HEAD)
[core]
  editor = vim
  excludesfile = ~/.config/git/ignore
  pager = delta --diff-highlight --keep-plus-minus-markers
[delta]
  navigate = true
[diff]
  colorMoved = default
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[include]
  path = ~/.config.local/git/config
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --diff-highlight --keep-plus-minus-markers
[merge]
  conflictstyle = diff3
[pager]
  difftool = true
[pull]
  rebase = false
[push]
  default = current
