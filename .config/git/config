[core]
  editor = vim
  excludesfile = ~/.config/git/ignore
[push]
  default = current
[pager]
  log  = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  pop  = stash pop
  drop = stash drop
  unstage = reset HEAD --
[ghq]
  root = ~/.ghq
[include]
  path = ~/.config.local/git/config
