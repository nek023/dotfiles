[alias]
  pop  = stash pop
  drop = stash drop
  open = !gh repo view -w -b $(git symbolic-ref --short HEAD)
[core]
  editor = vim
  excludesfile = ~/.config/git/ignore
[include]
  path = ~/.config.local/git/config
[init]
  defaultBranch = main
[pager]
  diff = diff-highlight | less
  log  = diff-highlight | less
  show = diff-highlight | less
[pull]
  rebase = false
[push]
  default = current
