# ------------------------------------------------------------------------------
# ssh-agent
# ------------------------------------------------------------------------------
if [[ -z $(pgrep -U "${USER}" ssh-agent) ]]; then
  eval "$(ssh-agent -s)" > /dev/null
fi

# ------------------------------------------------------------------------------
# tmux
# ------------------------------------------------------------------------------
if (( ${+commands[tmux]} )) && [[ -z "${TMUX}" && -z "${SSH_CONNECTION}" ]]; then
  tmux
fi
